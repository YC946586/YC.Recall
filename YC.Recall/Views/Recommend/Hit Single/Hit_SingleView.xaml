<UserControl x:Class="YC.Recall.Views.Recommend.Hit_Single.Hit_SingleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YC.Recall.Views.Recommend.Hit_Single"
             xmlns:skin="clr-namespace:YC.Skin;assembly=YC.Skin"
                 xmlns:Cov="clr-namespace:YC.Skin.Converters;assembly=YC.Skin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Recommend" FontSize="20"  />
        </StackPanel>
        <skin:ImgMovButton Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                           ImgPath="{Binding ImageSourcPath,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Width="200" Height="250" Grid.Row="1"/>
    </Grid>
</UserControl>
